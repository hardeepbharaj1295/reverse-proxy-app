{
  "ReverseProxy": {
    "Routes": {
      "signalr-hub": {
        "Order": 1,
        "ClusterId": "webapi",
        "Match": { "Path": "/hubs/notifications/{**catch-all}" }
      },
      "api-catchall": {
        "Order": 100,
        "ClusterId": "webapi",
        "Match": { "Path": "/{**catch-all}" }
      }
    },
    "Clusters": {
      "webapi": {
        "Destinations": {
          "webapi-1": { "Address": "https://localhost:5003/" }
        },
        "HttpRequest": { "ActivityTimeout": "00:02:00" },
        "HttpClient": { "DangerousAcceptAnyServerCertificate": true },
        "Metadata": { "SupportsWebSockets": "true" }
      }
    }
  }
}
